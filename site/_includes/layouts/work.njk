---
layout: layouts/base.njk
---

<div class="work">
    <section class="work__heading">
        <div class="h-layout--small">
            <h1>{{ title }}</h1>
            <p>{{ short }}</p>
            <a class="primary-button" href="{{ website }}">
                <span>view application</span>
                <i class="fas fa-arrow-right"></i>
            </a>  
        </div>
    </section>

    <section class="work__intro h-layout--small">
        <div class="work__intro__challenge">
            <div>
                <span class="work__intro__title">Challenge</span>
                <p class="work__intro__text">{{ challenge }}</p>      
            </div>      
        </div>

        <div class="work__intro__info">
            <div>
                <span class="work__intro__title">Year</span>
                <p class="work__intro__text">{{ year }}</p>
            </div>

            <div>
                <span class="work__intro__title">Technologies</span>
                <p class="work__intro__text">{{ technologies }}</p>
            </div>

            <div>
                <span class="work__intro__title">Live website</span>
                <a href="{{website}}">
                    <p class="work__intro__text">{{ website }}</p>
                </a>
            </div>
        </div>
    </section>

    <div class="work__img h-layout">
        <img src="../../static/images/{{ img2 }}" alt="banner">
    </div>

    <div class="work__img h-layout">
        <img src="../../static/images/{{ img1 }}" alt="banner">
    </div>

    <div class="work__img h-layout">
        <img src="../../static/images/{{ img3 }}" alt="banner">
    </div>
</div>
